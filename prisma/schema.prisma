generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id             String    @id
  email          String    @unique
  createdAt      DateTime  @default(now())
  hashedPassword String
  sessions       Session[]
}

model Session {
  id      String   @id
  userId  String
  expiresAt DateTime
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
